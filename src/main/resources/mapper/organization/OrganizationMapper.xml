<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.daoucoupon.mapper.OrganizationMapper">

    <!-- resultMap 정의 -->
    <resultMap id="organizationResultMap" type="com.example.daoucoupon.organization.model.Organization">
        <id property="id" column="id"/>
        <result property="organizationName" column="organization_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="companyId" column="company_id"/>
        <result property="createdAt" javaType="java.time.LocalDateTime" column="created_at"/>
    </resultMap>

    <!-- 모든 조직 가져오기 -->
    <select id="getAllOrganizations" resultMap="organizationResultMap">
        SELECT * FROM organization
    </select>

    <!-- companyId로 조직 가져오기 -->
    <select id="getOrganizationsByCompanyId" resultMap="organizationResultMap" parameterType="java.lang.Long">
        SELECT * FROM organization WHERE company_id = #{companyId}
    </select>

    <!-- organizationId로 조직 가져오기 -->
    <select id="getOrganizationById" resultType="com.example.daoucoupon.organization.model.Organization" parameterType="java.lang.Long">
        SELECT * FROM organization WHERE id = #{organizationId}
    </select>

</mapper>