<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.daoucoupon.mapper.UserMapper">

    <!-- resultMap 정의 -->
    <resultMap id="userResultMap" type="com.example.daoucoupon.user.model.User">
        <id property="id" column="id"/>
        <result property="organizationId" column="organization_id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 모든 사용자 가져오기 -->
    <select id="getAllUsers" resultMap="userResultMap">
        SELECT * FROM user
    </select>
    <select id="getAllUsersByOrganizationId" parameterType="Long" resultMap="userResultMap">
        SELECT * FROM user WHERE organization_id = #{organizationId}
    </select>
</mapper>